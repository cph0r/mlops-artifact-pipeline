{
  "data": {
    "dataset": "digits",
    "test_size": 0.2,
    "random_state": 42
  },
  "model": {
    "type": "LogisticRegression",
    "C": 1.0,
    "max_iter": 1000,
    "solver": "lbfgs",
    "multi_class": "auto",
    "random_state": 42
  },
  "training": {
    "random_state": 42,
    "test_size": 0.2
  },
  "artifacts": {
    "artifacts_path": "artifacts/",
    "model_filename": "model_train.pkl",
    "metrics_filename": "metrics.json",
    "config_filename": "config.json",
    "model_path": "src/model_train.pkl",
    "predictions_path": "artifacts/predictions.npy"
  },
  "logging": {
    "level": "INFO",
    "log_file": "pipeline.log",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "monitoring": {
    "enable_mlflow": false,
    "mlflow_tracking_uri": "sqlite:///mlflow.db",
    "experiment_name": "mlops-pipeline",
    "log_metrics": true,
    "log_artifacts": true
  },
  "deployment": {
    "model_registry": "local",
    "model_version": "1.0.0",
    "api_endpoint": "http://localhost:8000",
    "health_check_interval": 30
  }
} 